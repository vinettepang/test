{
    "name": "@tua-mp/service",
    "version": "0.1.4",
    "description": "local service for tua-mp projects, inspired by @vue/cli-service",
    "main": "lib/Service.js",
    "bin": {
        "tua-mp-service": "bin/tua-mp-service.js"
    },
    "scripts": {
        "cov": "open coverage/lcov-report/index.html",
        "tdd": "cross-env NODE_ENV=test jest --watch",
        "test": "cross-env NODE_ENV=test jest && codecov",
        "lint": "eslint --fix lib/**/*.js bin/*",
        "pub": "npm run test && npm publish"
    },
    "jest": {
        "bail": true,
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
            "package.json"
        ]
    },
    "eslintIgnore": [
        "package.json"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tuateam/tua-mp-service.git"
    },
    "keywords": [
        "cli",
        "tua-mp",
        "tua-mp-service"
    ],
    "author": "StEve Young",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tuateam/tua-mp-service/issues"
    },
    "homepage": "https://github.com/tuateam/tua-mp-service#readme",
    "devDependencies": {
        "babel-eslint": "^8.2.5",
        "codecov": "^3.0.2",
        "cross-env": "^5.2.0",
        "eslint": "^5.0.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "jest": "^23.1.0"
    },
    "dependencies": {
        "copy-webpack-plugin": "^4.5.1",
        "eslint-friendly-formatter": "^4.0.1",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "mini-css-extract-plugin": "^0.4.0",
        "semver": "^5.5.0",
        "vue-loader": "^15.2.4",
        "vue-template-compiler": "^2.5.16",
        "webpack": "^4.12.1",
        "webpack-chain": "^4.8.0",
        "webpack-merge": "^4.1.3",
        "webpackbar": "^2.6.1"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=8"
    }
}
